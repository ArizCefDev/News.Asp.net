@model DTO.EntityDTO.PostDTO

@{
    ViewData["Title"] = "PostAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-grid">
    <div class="agile-grids">
        <!-- input-forms -->
        <div class="grids">
            <div class="progressbar-heading grids-heading">
                <h2>Yeni Form</h2>
            </div>
            <div class="panel panel-widget forms-panel">
                <div class="forms">
                    <div class="form-grids widget-shadow" data-example-id="basic-forms">
                        <div class="form-title">
                            <h4>Post Formu :</h4>
                        </div>
                        <div class="form-body">
                            <form method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Foto</label>
                                    <input type="file" asp-for="Image1" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Başlıq</label>
                                    <span asp-validation-for="Title" style="color:red;"></span>
                                    <input type="text" asp-for="Title" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Mətn</label>
                                    <span asp-validation-for="Text" style="color:red;"></span>
                                    <textarea asp-for="Text" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin"></textarea>
                                </div>

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Kateqoriya</label>
                                    <select class="form-control" id="exampleInputEmail1" asp-for="CategoryID">
                                        @foreach (var item in ViewBag.ctg)
                                        {
                                            <option value="@item.Id">@item.Name</option>

                                        }
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-default w3ls-button">Əlavə et</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- //input-forms -->
    </div>
</div>

