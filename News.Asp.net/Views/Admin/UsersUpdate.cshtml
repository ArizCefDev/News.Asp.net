@model DTO.EntityDTO.UserDTO

@{
    ViewData["Title"] = "UsersUpdate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-grid">
    <div class="agile-grids">
        <!-- input-forms -->
        <div class="grids">
            <div class="progressbar-heading grids-heading">
                <h2>Redakte Form</h2>
            </div>
            <div class="panel panel-widget forms-panel">
                <div class="forms">
                    <div class="form-grids widget-shadow" data-example-id="basic-forms">
                        <div class="form-title">
                            <h4>User Formu :</h4>
                        </div>
                        <div class="form-body">
                            <form method="post" enctype="multipart/form-data">
                       @*         <div class="form-group">
                                    <label for="exampleInputEmail1">Foto</label>
                                    <input type="file" asp-for="Image1" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                                </div>*@
                                <div class="form-group">
                                    <label for="exampleInputEmail1">İstifadəçi adı</label>
                                    @*<span asp-validation-for="UserName" style="color:red;"></span>*@
                                    <input type="text" asp-for="UserName" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Şifrə</label>
                                    <span style="color:red;">@ViewBag.err</span>
                                    <input type="text" asp-for="Password" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                                </div>
                                
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Rolu</label>
                                    <select class="form-control" id="exampleInputEmail1" asp-for="RoleId">
                                        @foreach (var item in ViewBag.rl)
                                        {
                                            <option value="@item.ID">@item.Name</option>

                                        }
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-default w3ls-button">Redaktə et</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- //input-forms -->
    </div>
</div>
