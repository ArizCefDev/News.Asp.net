@model DTO.EntityDTO.CategoryDTO
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="main-grid">
    <div class="agile-grids">
        <!-- input-forms -->
        <div class="grids">
            <div class="progressbar-heading grids-heading">
                <h2>Yeni Form</h2>
            </div>
            <div class="panel panel-widget forms-panel">
                <div class="forms">
                    <div class="form-grids widget-shadow" data-example-id="basic-forms">
                        <div class="form-title">
                            <h4>Kateqoriya Formu :</h4>
                        </div>
                        <div class="form-body">
                            <form method="post">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Adı</label>
                                    <span asp-validation-for="Name" style="color:red;"></span>
                                    <input type="text" asp-for="Name" class="form-control" id="exampleInputEmail1" placeholder="Məlumatı daxil edin">
                                </div>
                                <button type="submit" class="btn btn-default w3ls-button">Əlavə et</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- //input-forms -->
    </div>
</div>